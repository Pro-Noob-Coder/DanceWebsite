extends base.pug

block scripts
  script(src='../static/index.js')

block style 
    style
      include ../static/style.css
      include ../static/styleContact.css

block content 
    .container 
      h2 Contact Us
      form(action="/contact", method="post", class="myForm")
        input(type="text", id="name", name="name",class="myInput", placeholder="Enter your name") 
        input(type="number", id="age", name="age",class="myInput", placeholder="Enter your age") 
        input(type="text", id="gender", name="gender",class="myInput", placeholder="Enter your gender") 
        input(type="address", id="address", name="address",class="myInput", placeholder="Enter your address") 
        input(type="phone", id="phone", name="phone",class="myInput", placeholder="Enter your phone number") 
        input(type="email", id="email", name="email",class="myInput", placeholder="Enter your email") 
        input(type="submit", class="btn")